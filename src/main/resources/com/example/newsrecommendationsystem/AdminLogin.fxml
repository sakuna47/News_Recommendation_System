<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.newsrecommendationsystem.AdminLoginController">
   <children>
      <!-- Title -->
      <Text layoutX="215.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Admin Login">
         <font>
            <Font size="27.0" />
         </font>
      </Text>

      <!-- Username Label -->
      <Label layoutX="78.0" layoutY="94.0" text="Enter Username/Email" />

      <!-- Username Field -->
      <TextField fx:id="usernameField" layoutX="227.0" layoutY="90.0" promptText="Enter your username or email" />

      <!-- Password Label -->
      <Label layoutX="78.0" layoutY="131.0" text="Enter Password" />

      <!-- Password Field -->
      <PasswordField fx:id="passwordField" layoutX="226.0" layoutY="127.0" promptText="Enter your password" />

      <!-- Login Button -->
      <Button layoutX="227.0" layoutY="160.0" text="Login" onAction="#handleLogin"/>

   </children>
</AnchorPane>
